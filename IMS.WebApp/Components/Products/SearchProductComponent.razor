<div class="input-group">
    <input type="text"
           class="form-control"
           placeholder="Type inventory name here to search"
           @bind-value="productNameToSearch" />
    <button type="button" 
        class="btn-success"
         @onclick="OnSearch">Search </button>
</div>

@code {
    private string productNameToSearch = string.Empty;

    [Parameter]
    public EventCallback<string> OnProductSearchInventory { get; set; }

    private void OnSearch()
    {
        OnProductSearchInventory.InvokeAsync(productNameToSearch);
    }
}