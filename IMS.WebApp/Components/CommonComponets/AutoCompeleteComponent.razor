<div class="form-group">
    <label for="search">@Label</label>
    <input type="text"
           class="form-control"
           @bind-value="userInput"
           @bind-value:event="oninput" />
</div>
@if(searchResults != null && searchResults.Count > 0)
{
   <div class="Serah-result-Component">
        <ul>
            @foreach (var item in searchResults)
            {
                <li @key="item.Id"
                    @onclick="@(()=>OnSelectItem(item))">
                    @item.Name
                </li>
            }
        </ul>
    </div>
}
@code {
    [Parameter]
    public string Label { get; set; } = string.Empty;

    [Parameter]
    public Func<string, List<ItemViewModel>>? SeracFunction { get; set; }

    private List<ItemViewModel>? searchResults = null;

    private ItemViewModel? selectedItem = null;

    private string _userInput = string.Empty;

    public string userInput
    {
        get => _userInput;
        set
        {
            _userInput = value;
            if (!string.IsNullOrWhiteSpace(_userInput) && SeracFunction != null)
            {
                searchResults = SeracFunction(_userInput);
            }
        }
    }

    private void OnSelectItem(ItemViewModel? item)
    {
        this.selectedItem = item;
        this.searchResults = null;

        if(item != null)
        this.userInput = item.Name;
    }

    public class ItemViewModel
    {
        public int Id { get; set; }
        public string Name { get; set; } = string.Empty;
    }
}
